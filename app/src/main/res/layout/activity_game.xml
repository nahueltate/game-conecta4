    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn"
        android:backgroundTint="@color/red_piece"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/linearBoard"
        app:layout_constraintBottom_toTopOf="@+id/linearScores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/linearScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnTurn"
        app:layout_constraintBottom_toTopOf="@id/btnResetGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRedScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/red_piece"
            android:clickable="false"
            android:text="@string/_0"
            android:textSize="20sp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYellowScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/yellow_piece"
            android:clickable="false"
            android:text="@string/_0"
            android:textSize="20sp"/>

    </LinearLayout>






    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResetGame"
        app:cornerRadius="13dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_game"
        android:layout_margin="8dp"
        android:backgroundTint="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnResetCounter"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResetCounter"
        app:cornerRadius="13dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_count"
        android:layout_margin="8dp"
        android:backgroundTint="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnResetGame"
        app:layout_constraintEnd_toEndOf="parent"/>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />




